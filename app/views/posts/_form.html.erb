<%= form_for @post do |f| %>
<%= f.label :title, "Название поста" %>
<br>
<%= f.text_field :title, class: "form-control" %>
<br>
<%= f.label :url, "Текст в URL" %>
<br>
<%= f.text_field :url, class: "form-control" %>
<br>
<%= f.text_area :content, class: "form-control insert-post-here", rows: 17 %>
<br>
<%= f.label :tag_list, "Список тегов" %>
<%= f.text_field :tag_list, class: 'form-control' %>
<br>
<%= f.submit "Опубликовать", class: "btn btn-success" %>

<% end %>
